<script>
  (() => {
    function drawMoon(canvas: HTMLCanvasElement) {
      const ctx = canvas.getContext('2d');
      if (!ctx) return;

      const rawPct = Number(canvas.dataset.phasePct || '0');
      const phasePct = Number.isFinite(rawPct) ? ((rawPct % 1) + 1) % 1 : 0;
      const phaseAngle = phasePct * 2 * Math.PI;

      const size = canvas.width;
      const radius = size / 2 - 1;
      const center = size / 2;
      const image = ctx.createImageData(size, size);
      const bytes = image.data;

      // Right-lit at first quarter, left-lit at last quarter.
      const sunX = Math.sin(phaseAngle);
      const sunZ = -Math.cos(phaseAngle);

      const dark = [6, 10, 22];
      const light = [220, 229, 240];
      const glow = [138, 168, 216];

      for (let y = 0; y < size; y++) {
        for (let x = 0; x < size; x++) {
          const nx = (x + 0.5 - center) / radius;
          const ny = (y + 0.5 - center) / radius;
          const rr = nx * nx + ny * ny;
          const idx = (y * size + x) * 4;
          if (rr > 1) {
            bytes[idx + 3] = 0;
            continue;
          }

          const nz = Math.sqrt(1 - rr);
          const lambert = nx * sunX + nz * sunZ;
          const lit = Math.max(0, lambert);
          const limb = Math.max(0, 1 - Math.sqrt(rr));
          const earthshine = 0.06 * limb;
          const brightness = Math.max(earthshine, Math.min(1, lit * 0.92 + limb * 0.06));
          const value = Math.pow(brightness, 0.9);

          bytes[idx] = Math.round(dark[0] + (light[0] - dark[0]) * value);
          bytes[idx + 1] = Math.round(dark[1] + (light[1] - dark[1]) * value);
          bytes[idx + 2] = Math.round(dark[2] + (light[2] - dark[2]) * value);
          bytes[idx + 3] = 255;
        }
      }

      ctx.clearRect(0, 0, size, size);
      ctx.putImageData(image, 0, 0);

      ctx.save();
      ctx.beginPath();
      ctx.arc(center, center, radius, 0, Math.PI * 2);
      ctx.clip();
      const halo = ctx.createRadialGradient(center * 0.78, center * 0.7, radius * 0.08, center, center, radius);
      halo.addColorStop(0, `rgba(${glow[0]}, ${glow[1]}, ${glow[2]}, 0.16)`);
      halo.addColorStop(0.75, 'rgba(0, 0, 0, 0)');
      ctx.fillStyle = halo;
      ctx.fillRect(0, 0, size, size);
      ctx.restore();

      ctx.beginPath();
      ctx.arc(center, center, radius - 0.5, 0, Math.PI * 2);
      ctx.strokeStyle = 'rgba(255,255,255,0.2)';
      ctx.lineWidth = 1;
      ctx.stroke();
    }

    function initMoonCanvas() {
      document.querySelectorAll('canvas.moon-disc-canvas').forEach((node) => {
        drawMoon(node as HTMLCanvasElement);
      });
    }

    initMoonCanvas();
    document.addEventListener('astro:page-load', initMoonCanvas);
  })();
</script>

<script>
  // --- Custom tooltip system (works on hover + tap) ---
  (() => {
    const globalScope = window as Window & { __voidwireTipCleanup?: () => void };
    if (typeof globalScope.__voidwireTipCleanup === 'function') {
      globalScope.__voidwireTipCleanup();
    }

    const tip = document.createElement('div');
    tip.className = 'tip-popup';
    tip.style.display = 'none';
    document.body.appendChild(tip);

    let activeTarget: Element | null = null;
    let hideTimer: number | null = null;

    function showTip(target: Element) {
      const text = target.getAttribute('data-tip');
      if (!text) return;
      if (hideTimer) { clearTimeout(hideTimer); hideTimer = null; }
      activeTarget = target;
      tip.textContent = text;
      tip.style.display = 'block';

      const rect = target.getBoundingClientRect();
      const tipRect = tip.getBoundingClientRect();
      let left = rect.left + rect.width / 2 - tipRect.width / 2;
      let top = rect.top - tipRect.height - 8;

      // Flip below if no room above
      if (top < 4) top = rect.bottom + 8;
      // Clamp horizontal
      left = Math.max(8, Math.min(left, window.innerWidth - tipRect.width - 8));

      tip.style.left = `${left}px`;
      tip.style.top = `${top}px`;
    }

    function hideTip() {
      tip.style.display = 'none';
      activeTarget = null;
    }

    function scheduledHide() {
      hideTimer = window.setTimeout(hideTip, 120);
    }

    // Desktop: hover
    const onMouseEnter = (e: Event) => {
      const target = (e.target as Element)?.closest?.('[data-tip]');
      if (target && target.getAttribute('data-tip')) showTip(target);
    };
    const onMouseLeave = (e: Event) => {
      const target = (e.target as Element)?.closest?.('[data-tip]');
      if (target && target === activeTarget) scheduledHide();
    };
    document.addEventListener('mouseenter', onMouseEnter, true);
    document.addEventListener('mouseleave', onMouseLeave, true);

    // Mobile: tap to show, tap elsewhere to dismiss
    const onClick = (e: Event) => {
      const target = (e.target as Element)?.closest?.('[data-tip]');
      if (target && target.getAttribute('data-tip')) {
        if (activeTarget === target) {
          hideTip();
        } else {
          showTip(target);
        }
      } else {
        if (activeTarget) hideTip();
      }
    };
    document.addEventListener('click', onClick);

    globalScope.__voidwireTipCleanup = () => {
      document.removeEventListener('mouseenter', onMouseEnter, true);
      document.removeEventListener('mouseleave', onMouseLeave, true);
      document.removeEventListener('click', onClick);
      tip.remove();
    };
  })();
</script>
