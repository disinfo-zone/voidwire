# Voidwire Environment Configuration
# Copy to .env and fill in values

# === Database ===
DATABASE_URL=postgresql+asyncpg://voidwire:voidwire@voidwire-db:5432/voidwire
DATABASE_ECHO=false

# === Redis ===
REDIS_URL=redis://voidwire-redis:6379/0

# === Security ===
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=change-me-in-production

# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# === JWT ===
JWT_EXPIRE_MINUTES=1440
USER_JWT_EXPIRE_MINUTES=10080

# === Site URLs ===
SITE_URL=https://voidwire.disinfo.zone
ADMIN_URL=https://admin.voidwire.disinfo.zone
API_URL=https://api.voidwire.disinfo.zone

# === Timezone ===
# Pipeline uses this to determine date_context
TIMEZONE=America/New_York

# === Pipeline ===
# Used as defaults unless Admin > Pipeline overrides scheduler values in DB.
PIPELINE_SCHEDULE=0 5 * * *
PIPELINE_RUN_ON_START=false
ARTIFACT_RETENTION_DAYS=90
ASYNC_JOB_RETENTION_DAYS=30
ANALYTICS_RETENTION_DAYS=365
BILLING_RECONCILIATION_INTERVAL_HOURS=24

# === Rate Limiting ===
RATE_LIMIT_PER_HOUR=60

# === Setup Guard ===
SETUP_GUARD_RECHECK_SECONDS=30
SKIP_SETUP_GUARD=false
SKIP_MIGRATION_CHECK=false

# === Backups ===
BACKUP_DIR=./backups

# === Billing (Stripe) ===
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# === OAuth ===
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# === PostgreSQL (for docker-compose) ===
POSTGRES_USER=voidwire
POSTGRES_PASSWORD=voidwire
POSTGRES_DB=voidwire

# === Minio (S3-compatible storage) ===
MINIO_ROOT_USER=voidwire
MINIO_ROOT_PASSWORD=voidwire-minio-secret

# === Cloudflare Tunnel ===
CLOUDFLARE_TUNNEL_TOKEN=
